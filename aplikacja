                    }
                    else
                    {
                        Console.WriteLine("Wprowadzono bledne dane :/");
                    }
                }
                else
                {
                    Console.WriteLine("Wprowadzono bledne dane :/");
                }
            } while (x == 0);
        }
    }
}
